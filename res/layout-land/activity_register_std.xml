<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterStd" >

    <EditText
        android:id="@+id/etfavgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" />

    <EditText
        android:id="@+id/StdID"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/etnat"
        android:ems="10"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:text="@string/txtinfo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18pt" />

    <EditText
        android:id="@+id/etconatact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/TextView03"
        android:ems="10"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etage"
        android:layout_alignTop="@+id/TextView02"
        android:ems="10"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/etage"
        android:layout_marginTop="32dp"
        android:text="@string/txtnationality"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="@string/StudentID"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:text="@string/txtname"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/etname"
        android:layout_marginTop="15dp"
        android:text="@string/txtage"
        android:textSize="14pt" />

    <EditText
        android:id="@+id/etage"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignRight="@+id/textView4"
        android:ems="5" />

    <EditText
        android:id="@+id/etnat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="28dp"
        android:text="@string/txtfavgame"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="42dp"
        android:text="@string/txtcontact"
        android:textSize="14pt" />

    <Button
        android:id="@+id/btnCreateHangouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etconatact"
        android:layout_alignBottom="@+id/etconatact"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/etfavgame"
        android:onClick="activity2"
        android:text="@string/btnViewStd"
        android:textSize="14pt" />

    <Button
        android:id="@+id/btnStudentss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etconatact"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/btnCreateHangouts"
        android:onClick="Send"
        android:text="@string/btnRegStd"
        android:textSize="14pt" />

    <Button
        android:id="@+id/btnGUC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnStudentss"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/btnStudentss"
        android:text="@string/btnDeleteAct"
        android:textSize="14pt" />

</RelativeLayout>